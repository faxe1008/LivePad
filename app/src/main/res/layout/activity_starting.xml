<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_marginLeft="-20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:background="@drawable/ic_launcher_foreground" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Welcome to LivePad!"
                        android:id="@+id/textView2"
                        android:gravity="right" />
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"
                        android:text="Sketch your ideas and collaborate"
                        android:layout_below="@id/textView2"/>
                </RelativeLayout>
        </LinearLayout>

        <TextView
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to livepad.ddns.net and scan the QR-Code"/>

        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join with name:"
            android:id="@+id/lblJoinAs"/>

        <EditText
            android:layout_width="match_parent"
            android:maxWidth="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/txtJoinAs"/>



        <Button
            android:id="@+id/btnScan"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Scan LivePad Code"
            android:textAllCaps="false"
            android:textSize="18dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>